<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%5p] %d %t (%c{10}) - %m%n" />
		</Console>

		<RollingFile name="WorkFile" fileName="logs/chat_server.log"
			filePattern="logs/chat_server.%d{yyyyMMdd_HHmm}-%i.log" append="true">
			<PatternLayout pattern="[%5p] %d %t (%c{10}) - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true"
					interval="30" />
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
		</RollingFile>

		<RollingFile name="WorkFile_Error" fileName="logs/chat_error_server.log"
			filePattern="logs/chat_error_server.%d{yyyyMMdd_HHmm}-%i.log" append="true">
			<PatternLayout pattern="[%5p] %d %t (%c{10}) - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy modulate="true"
					interval="30" />
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<Filters>
				<ThresholdFilter level="error" onMatch="ACCEPT"
					onMismatch="DENY" />
			</Filters>
		</RollingFile>
	</Appenders>
	<Loggers>
		<logger name="org.apache.ignite" level="INFO">
		</logger>
		<logger name="org.apache.ignite.spi.discovery" level="WARN">
		</logger>
		<logger name="org.apache.zookeeper" level="INFO">
		</logger>
		<Root level="all">
			<AppenderRef ref="WorkFile" />
			<AppenderRef ref="WorkFile_Error" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>